<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Weekly Performance"
        android:textColor="#323b43"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-medium"
        android:text="Improvement required"
        android:textColor="#ee4f4f"
        android:textSize="12sp" />

    <carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_margin="8dp"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="10dp"
        app:carbon_elevationShadowColor="#000">
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--app:cardCornerRadius="6dp"-->
        <!--card_view:cardBackgroundColor="#33000000">-->

        <LinearLayout
            android:id="@+id/aboutBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizzesTextView"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/accuracytextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Accuracy"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/accuracyPercentagetextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/accuracytextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="75%"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/quiztextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Quiz Taken"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/quizPercentagetextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quiztextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="10"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ranktextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Accuracy"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rankPercentagetextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ranktextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="12k"
                    android:textSize="20sp" />
            </RelativeLayout>

        </LinearLayout>
    </carbon.widget.FrameLayout>

</RelativeLayout>