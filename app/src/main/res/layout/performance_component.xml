<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:carbon_cornerRadius="6dp"
    app:carbon_elevation="10dp"
    android:background="#fff"
    app:carbon_elevationShadowColor="#000">


    <LinearLayout
        android:id="@+id/aboutBar"
        android:paddingTop="16dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/accuracytextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Accuracy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/accuracyPercentagetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accuracytextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="75%"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/quiztextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Quiz Taken"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/quizPercentagetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quiztextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="10"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ranktextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Accuracy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rankPercentagetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ranktextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="12k"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>
</carbon.widget.FrameLayout>